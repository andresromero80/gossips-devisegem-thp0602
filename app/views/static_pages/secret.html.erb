<% header "Community of St-Brieuc" %>
<% @users.each.with_index do |user,ind| %>
	<div class="col-xs-6 col-sm-4 col-lg-3">
		<div class="card-deck">
			<div class="card">
		    	<div class="card-body">
		        	<h4 class="card-title">
		        		Name: <%= user.name %> 
		        	</h4>
		        	<h5 class="card-title">
		        		Profession: <%= user.description %> 
		        	</h5>
		        	<h6 class="card-subtitle mb-2 text-muted">
		        		Contact: <%= user.email %>
		        	</h6>
		        	<img class="card-img-top" src="https://loremflickr.com/200/200?random=<%= ind %>/kitten" alt="Card image cap">
		    	</div>
		    </div>
		</div>
	</div>
<% end %>  

